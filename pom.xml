    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <tag>master</tag>
        <url>git@github.com:yingzhuo/snowflake-java-client.git</url>
        <connection>scm:git:git@github.com:yingzhuo/snowflake-java-client.git</connection>
        <developerConnection>scm:git:git@github.com:yingzhuo/snowflake-java-client.git</developerConnection>
