    <artifactId>snowflake-java-client</artifactId>
    <version>1.0.2</version>
    <packaging>jar</packaging>

    <name>snowflake-java-client</name>
    <url>https://github.com/yingzhuo/snowflake-java-client</url>

    <parent>
